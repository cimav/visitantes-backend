=form_for @visitante do |f|
  .form-group
    =f.label :apellido
    =f.text_field :apellido, {class: "form-control"}
  .form-group
    =f.label :nombre
    =f.text_field :nombre, {class: "form-control"}
  .form-group
    =f.label :empresa
    =f.text_field :empresa, {class: "form-control"}
  .form-group
    =f.label :tipo_copy
    =f.text_field :tipo, {class: "form-control"}
  .form-group
    = f.label :tipo
    -# = f.select(:tipo, List.items(foo))
    %div.input-field
      =f.select :tipo, @tipos, :id
  .form-group
    =f.label :nota
    =f.text_area :nota, {class: "form-control"}
  =f.submit "Guardar", class: "btn btn-default"


