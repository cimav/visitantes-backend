

=form_for @visitante do |f|

  .col.s12
    .card-panel
      .card-title
        %h2 Editar
      %div
        %div.left-editar
          %img{:src=> :"#{root_url}visitantes/avatar/#{f.object.id}", :class=>"img-avatar-edicion"}
        %div.right-editar
          .row.input-field
            =f.label :apellido
            =f.text_field :apellido, {class: "form-control"}
          .row.input-field
            =f.label :nombre
            =f.text_field :nombre, {class: "form-control"}
          .row.input-field
            =f.label :empresa
            =f.text_field :empresa, {class: "form-control"}
          .row
            =f.label :tipo,  'Tipo'
            =f.select :tipo, @tipos, {}, { :class => "form-control"}
          .row.input-field
            =f.label :nota
            =f.text_area :nota, {class: "materialize-textarea"}

      %div.card-action
        .row
          %a.waves-effect.waves-light.btn{:href=>"#{root_url}"}
            %i.material-icons.left cancel
            Cancelar
          -# .input-field
            -# =f.submit "Guardar", class: "btn btn-default"
          %button.btn.waves-effect.waves-light{:type=>"submit", :style=>"margin-left:5px;"}
            %i.material-icons.left save
            Guardar



