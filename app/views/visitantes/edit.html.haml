      new TipoVisita(0, 'Visitante'),
      new TipoVisita(1, 'Estudiante'),
      new TipoVisita(2, 'Proveedor'),
      new TipoVisita(3, 'Contratista'),
      new TipoVisita(4, 'Sub-contratista'),
      new TipoVisita(5, 'Ex-empleado'),
      new TipoVisita(6, 'Familiar'),
